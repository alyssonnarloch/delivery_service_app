<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.narlocks.delivery_service_app.activity.MakeContractFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbStars"
                android:numStars="5"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                style="@android:style/Widget.Holo.RatingBar.Indicator" />

            <TextView
                android:id="@+id/tvEvaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:textSize="14sp"
                android:text="" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/project_data"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:inputType="textCapSentences"
                android:hint="Título do projeto" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="4dp"
                android:ems="10"
                android:hint="Descrição do projeto"
                android:inputType="textMultiLine"
                android:gravity="top" />

            <CheckBox
                android:id="@+id/cbUseMyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/use_my_address"
                android:onClick="onClickUseMyAddress" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/etZipCode"
                android:layout_margin="4dp"
                android:hint="CEP" />

            <AutoCompleteTextView
                android:id="@+id/acCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="Cidade" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ems="10"
                android:hint="Endereço"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ems="10"
                android:hint="Número"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/dtStart"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:layout_weight="0.79"
                    android:editable="false"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Data de início"
                    android:inputType="date" />

                <ImageButton
                    android:id="@+id/ibStartCalendar"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_insert_invitation_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/dtEnd"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    android:layout_weight="0.79"
                    android:editable="false"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Data de término"
                    android:inputType="date" />

                <ImageButton
                    android:id="@+id/ibEndCalendar"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_insert_invitation_black_24dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btFinish"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:layout_weight="0.79"
                android:text="Finalizar"
                android:layout_gravity="center"
                android:layout_margin="4dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
