<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:id="@+id/llRow"
        android:padding="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_face_black_48dp"
            android:id="@+id/ivServiceProviderProfile"
            android:layout_gravity="center_horizontal"
            android:padding="6dp"
            android:layout_weight="0.27" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4.33">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvServiceProviderName"
                android:padding="4dp"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:gravity="left" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvExperienceDescription"
                android:padding="4dp"
                android:textSize="14sp"
                android:gravity="left"
                android:maxLines="7"
                android:ellipsize="end" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/llStars"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>