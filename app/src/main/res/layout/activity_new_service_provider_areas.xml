<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_service_provider_areas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.narlocks.delivery_service_app.activity.NewServiceProviderAreasActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <TextView
            android:text="Disponibilidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Title"
            android:textAlignment="center" />

        <CheckBox
            android:text="Está disponível para novos serviços?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbAvailable"
            android:layout_margin="4dp"
            android:checked="true" />

        <TextView
            android:text="Áreas de Atuação"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@android:style/TextAppearance.Material.Widget.ActionBar.Title"
            android:textAlignment="center" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/acCity"
            android:layout_margin="4dp"
            android:hint="Insira o nome da cidade" />

        <GridView
            android:layout_width="match_parent"
            android:layout_height="358dp"
            android:layout_margin="4dp"
            android:numColumns="1"
            android:id="@+id/gvSelectedCities" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:text="Continuar"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:id="@+id/btNext"
                android:layout_gravity="center_horizontal"
                android:onClick="onClickNext"
                android:gravity="center" />


        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
