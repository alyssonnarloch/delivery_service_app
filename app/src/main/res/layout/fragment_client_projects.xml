<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.narlocks.delivery_service_app.activity.ClientProjectsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@mipmap/ic_schedule_black_24dp"
                android:id="@+id/ivAwaiting"
                android:layout_weight="1"
                android:padding="2dp" />

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@mipmap/ic_block_black_24dp"
                android:id="@+id/ivRefused"
                android:layout_weight="1"
                android:padding="2dp" />

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@mipmap/ic_hourglass_empty_black_24dp"
                android:id="@+id/ivExecution"
                android:layout_weight="1"
                android:padding="2dp" />

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@mipmap/ic_hourglass_full_black_24dp"
                android:id="@+id/ivFinished"
                android:layout_weight="1"
                android:padding="2dp" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvClientProjects" />
    </LinearLayout>
</FrameLayout>
