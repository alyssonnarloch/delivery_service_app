<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.narlocks.delivery_service_app.activity.SPDashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvServiceProviderName"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="148dp"
                android:layout_height="132dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="@android:color/holo_blue_light"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:id="@+id/llSpEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:padding="4dp"
                    android:baselineAligned="false"
                    android:alpha="1.0"
                    android:background="@android:color/background_light"
                    android:layout_margin="1dp">

                    <ImageView
                        android:id="@+id/ivSpEdit"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_face_black_48dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/button_main_data"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="normal|bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="148dp"
                android:layout_height="132dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="@android:color/holo_blue_light"
                android:layout_marginLeft="8dp">

                <LinearLayout
                    android:id="@+id/llSpServices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:padding="4dp"
                    android:baselineAligned="false"
                    android:alpha="1.0"
                    android:background="@android:color/background_light"
                    android:layout_margin="1dp">

                    <ImageView
                        android:id="@+id/ivSpServices"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_build_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/button_services"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="normal|bold"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="148dp"
                android:layout_height="132dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="@android:color/holo_blue_light"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:id="@+id/llSpOccupationAreas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:padding="4dp"
                    android:baselineAligned="false"
                    android:alpha="1.0"
                    android:background="@android:color/background_light"
                    android:layout_margin="1dp">

                    <ImageView
                        android:id="@+id/ivSpOccupationAreas"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_place_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/button_occupation_areas"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="normal|bold"
                        android:gravity="center_vertical|center_horizontal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="148dp"
                android:layout_height="132dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="@android:color/holo_blue_light"
                android:layout_marginLeft="8dp">

                <LinearLayout
                    android:id="@+id/llSpPortfolio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:padding="4dp"
                    android:baselineAligned="false"
                    android:alpha="1.0"
                    android:background="@android:color/background_light"
                    android:layout_margin="1dp">

                    <ImageView
                        android:id="@+id/ivSpPortfolio"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_photo_library_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/button_portfolio"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="normal|bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="148dp"
                android:layout_height="132dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="@android:color/holo_blue_light"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:id="@+id/llSpEvaluations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:padding="4dp"
                    android:baselineAligned="false"
                    android:alpha="1.0"
                    android:background="@android:color/background_light"
                    android:layout_margin="1dp">

                    <ImageView
                        android:id="@+id/ivSpEvaluations"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_star_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/button_evaluations"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="normal|bold"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="148dp"
                android:layout_height="132dp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                android:weightSum="1"
                android:background="@android:color/holo_blue_light"
                android:layout_marginLeft="8dp">

                <LinearLayout
                    android:id="@+id/llSpProjects"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:padding="4dp"
                    android:baselineAligned="false"
                    android:alpha="1.0"
                    android:background="@android:color/background_light"
                    android:layout_margin="1dp">

                    <ImageView
                        android:id="@+id/ivSpProjects"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_developer_board_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/button_projects"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="normal|bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
